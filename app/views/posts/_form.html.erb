<%= form_for(@post) do |form| %>

    <%= render 'posts/error_message' %>

     <%= form.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category" }) %><br>

     <%= form.label :title %><br>
     <%= form.text_field :title, placeholder: "Post title here" %><br>
     <%= form.label :content %><br>
     <%= form.text_area :content, size: "60x12", placeholder: "Post stuff here" %><br>

     <%= form.submit %>
<% end %>
